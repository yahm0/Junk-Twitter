{{!-- This is card.handlebars --}}
{{#each tweets}}
<div class="card mb-4">
  <div class="row">
    <div class="col-md-5">
      <h2><a href="/card/{{id}}">{{name}}</a></h2>
      <p>Lorem Ipsum</p>
      <p>Created by {{user.name}} on {{timestamp}}</p>
    </div>
    <div class="col-md-7">
      <p>{{description}}</p>
    </div>
  </div>
</div>
{{/each}}
