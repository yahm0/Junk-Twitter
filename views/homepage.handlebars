<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Junk Twitter - Homepage</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
        }
        .column-container {
            display: flex;
            flex-direction: row;
            min-height: 100vh;
        }
        .column {
            flex: 1;  /* Each column takes equal width by default */
            padding: 20px;  /* Padding for content */
        }
        .column-middle {
            flex: 2;  /* Middle column takes double the space of side columns */
        }
        .full-height-image {
            height: 100vh;
            width: 100vw;
            object-fit: cover;
            position: fixed;
            top: 0;
            left: 0;
            z-index: -1;
        }
        .content {
            position: relative;
            z-index: 10;
        }
        .card, nav {
            background-color: rgba(255, 255, 255, 0.8);
        }
    </style>
</head>
<body class="font-mono">

<div class="column-container gap-20">
    <div class="column bg-yellow-800 flex flex-col items-center pt-8 pb-4 max-w-xs mx-auto space-y-4"> <!-- Left Column -->
        <!-- Container to control width -->
        <div class="w-full flex flex-col items-center space-y-4">
            <div class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded flex justify-center">
                <span class="font-bold text-white">Home</span>
            </div>
            <a class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded flex justify-center items-center">
                <span class="icon">üîî</span>
                <span>Notifications</span>
            </a>
            <a class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded flex justify-center items-center">
                <span class="icon">üìù</span>
                <span>Lists</span>
            </a>
            <a class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded flex justify-center items-center">
                <span class="icon">üë§</span>
                <span>Profile</span>
            </a>
            <a class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded flex justify-center items-center">
                <span class="icon">‚ãÆ</span>
                <span>More</span>
            </a>
        </div>
    </div><!-- Left Column ends -->

    <!-- Middle Column -->
<div class="column flex-grow bg-red-700 p-4 space-y-6">
    <!-- Tweet input and submit button -->
    <div class="mb-6">
        <textarea id="tweetInput" class="w-full p-4 text-gray-700 rounded-lg shadow-inner" placeholder="What's happening?" rows="3"></textarea>
        <button id="tweetSubmit" class="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg mt-4">Tweet</button>
    </div>
    
    <!-- Cards from all users -->
    <div id="tweetsContainer" class="space-y-4">
        {{#each tweets}}
        <div class="card bg-white shadow rounded-lg p-6 mb-4">
            <div class="flex flex-col">
                <strong class="text-gray-900">{{username}}</strong> <!-- Display the username here -->
                <p class="text-gray-800">{{content}}</p>
                <p class="text-sm text-gray-600">Posted on {{format_date createdAt}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</div> <!-- Middle Column ends -->

    <div class="bg-yellow-800 flex flex-col items-center pt-8 pb-4 max-w-xs w-full  space-y-4">
        <!-- User's username -->
        <div class="text-white text-center w-full">
            <h3 class="font-bold drop-shadow text-lg mb-4">{{user.username}}</h3>
        </div>
        <!-- User's recent tweets -->
        <div class="space-y-2">
            {{#if user.tweets}}
                {{#each user.tweets as |tweet|}}
                    <div class="bg-white p-3 rounded shadow">
                        <p>{{tweet.content}}</p> <!-- Display the tweet content -->
                        <p class="text-gray-500 text-sm">{{dateFormat tweet.createdAt}}</p> <!-- Display the tweet timestamp using a dateFormat helper -->
                    </div>
                {{/each}}
            {{else}}
                <p class="text-white">No recent tweets to show.</p>
            {{/if}}
        </div>
    </div><!-- Right Column ends -->
</div>


    <footer class="p-4 bg-yellow-900">
        <!-- Footer Content -->
    </footer>

    {{#if logged_in}}
        <script src="/js/logout.js"></script>
    {{/if}}

<script src="/js/tweet.js"></script>
</body>
</html>
